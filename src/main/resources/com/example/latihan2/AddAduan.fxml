<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.latihan2.AddAduan">
    <children>
        <ImageView fx:id="addAduanBG" fitHeight="720.0" fitWidth="1280.0" />
        <VBox alignment="CENTER" layoutX="20" layoutY="20" prefWidth="1240.0" spacing="10">
            <!-- Top Bar -->
            <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
                <ImageView fx:id="logoImageView" fitHeight="40" fitWidth="40" />
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Urbanify" />
                <HBox alignment="CENTER_RIGHT" spacing="20">
                    <Button text="Dashboard" />
                    <Button text="Riwayat" />
                </HBox>
                <VBox alignment="CENTER_RIGHT">
                    <Label text="Admin" />
                    <Label text="admin@urbanify.id" />
                </VBox>
            </HBox>

            <!-- Form Area -->
            <VBox alignment="CENTER" spacing="10">
            <HBox>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
               <children>
                      <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Isi Informasi Aduan" />
               </children>
            </HBox>
                <GridPane hgap="10" styleClass="grid-pane" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="100.0" />
                        <ColumnConstraints halignment="LEFT" minWidth="200.0" />
                        <ColumnConstraints halignment="RIGHT" minWidth="200.0" />
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
                    </columnConstraints>
<!--                    <columnConstraints>-->
<!--                        <ColumnConstraints percentWidth="20.0" />-->
<!--                        <ColumnConstraints percentWidth="30.0" />-->
<!--                        <ColumnConstraints percentWidth="50.0" />-->
<!--                    </columnConstraints>-->
<!--                    <rowConstraints>-->
<!--                        <RowConstraints percentHeight="20" />-->
<!--                        <RowConstraints percentHeight="20" />-->
<!--                        <RowConstraints percentHeight="20" />-->
<!--                        <RowConstraints percentHeight="20" />-->
<!--                        <RowConstraints percentHeight="20" />-->
<!--                    </rowConstraints>-->
                    <rowConstraints>
                        <RowConstraints minHeight="30" />
                        <RowConstraints minHeight="30" />
                        <RowConstraints minHeight="30" />
                        <RowConstraints minHeight="30" />
                        <RowConstraints minHeight="80" />
                    </rowConstraints>

                    <!-- Left Column -->
                    <Label text="Judul" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="judulField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Kategori" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <ComboBox fx:id="kategoriComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Lokasi" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <VBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <ComboBox fx:id="provinsiComboBox" promptText="Provinsi" />
                        <ComboBox fx:id="kabupatenComboBox" promptText="Kabupaten/Kota" />
                        <ComboBox fx:id="kelurahanComboBox" promptText="Kelurahan" />
                    </VBox>

                    <Label text="RT / RW" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="rtRwField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <!-- Right Column -->
                    <Label text="Rincian Aduan" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <TextArea fx:id="rincianAduanArea" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.rowSpan="2" />

                    <Label text="Upload foto" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <ImageView fx:id="uploadFotoImageView" fitHeight="100" fitWidth="100" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                    <Label text="Upload video" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                    <ImageView fx:id="uploadVideoImageView" fitHeight="100" fitWidth="100" GridPane.columnIndex="3" GridPane.rowIndex="3" />

                    <!-- Buttons -->
                    <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="3" GridPane.columnSpan="4" GridPane.rowIndex="4">
                        <Button fx:id="batalButton" style="-fx-background-color: #ff6666; -fx-text-fill: white;" text="Batal" />
                        <Button fx:id="simpanButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Simpan" />
                    </HBox>
                </GridPane>
            </VBox>
        </VBox>
    </children>

</AnchorPane>
