                        <RowConstraints minHeight="-Infinity" />
                        <RowConstraints minHeight="-Infinity" />
                    </rowConstraints>

                    <!-- Left Column -->
                    <Label text="Judul" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.valignment="TOP" />
                    <TextField fx:id="judulField" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.valignment="TOP" />

                    <Label text="Kategori" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <ComboBox fx:id="kategoriComboBox" maxHeight="-Infinity" maxWidth="-Infinity" promptText="Pilih Kategori" GridPane.columnIndex="1" GridPane.rowIndex="1" />

