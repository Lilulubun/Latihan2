               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </Group>
        <VBox maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="137.0" prefWidth="353.0" spacing="10.0">
            <TextField fx:id="usernameField" promptText="Nama Pengguna" />
            <TextField fx:id="nameField" promptText="Nama" />
            <PasswordField fx:id="passwordField" promptText="Kata Sandi" />
            <PasswordField fx:id="confirmPasswordField" promptText="Konfirmasi Kata Sandi" />
