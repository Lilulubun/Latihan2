<AnchorPane minHeight="720.0" minWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.latihan2.SignupController">
   <ImageView fx:id="signupBG" fitHeight="720.0" fitWidth="1280.0" preserveRatio="true"/>
    <VBox layoutX="63.0" layoutY="218.0" maxHeight="-Infinity" maxWidth="-Infinity" spacing="25.0">
      <Group>
         <children>
              <Label maxHeight="-Infinity" maxWidth="-Infinity" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Belum punya akun?">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
